<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".choose_payment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baemin_jua_ttf"
        android:gravity="center|top"
        android:padding="5dp"
        android:paddingTop="5dp"
        android:text="선택정보 확인"

        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_side"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#007E7878"
                android:text="선택 코스명"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/course_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:gravity="center|right"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="가격"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/course_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:gravity="center|right"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="할부"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/month_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/payment_checkBox"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
      android:layout_margin="7dp"
        android:fontFamily="@font/baemin_dohyeon_ttf"
        android:gravity="center"
        android:text="위 사항을 모두 확힌했으며 결제를 진행합니다." />

    <Button
        android:id="@+id/start_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#131313"
        android:fontFamily="@font/baemin_dohyeon_ttf"
        android:paddingHorizontal="4dp"
        android:text="결제진행"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/test_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="테스트결제" />

</LinearLayout>